<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">60</defaultcontrol>

    <controls>
        <control type="image" id="100000">
            <left>-3000</left>
            <top>-3000</top>
            <width>10</width>
            <height>10</height>
            <texture background="true">$VAR[BackgroundImage]</texture>
        </control>
        <include>BlurredBackground</include>

        <control type="group">
            <top>128</top>
            <left>600</left>
            <right>600</right>
            <bottom>116</bottom>

            <control type="Label" id="1">
                <top>16</top>
                <width>100%</width>
                <height>64</height>
                <textcolor>Primary</textcolor>
                <align>center</align>
                <font>MenuHeader</font>
            </control>

            <control type="textbox" id="5">
                <description>textarea</description>
                <top>120</top>
                <bottom>32</bottom>
                <font>MenuHeader</font>
                <monofont>Mono48</monofont>
                <textcolor>TextBright</textcolor>
                <selectedcolor>TextBright</selectedcolor>
                <pagecontrol>60</pagecontrol>
            </control>

            <control type="scrollbar" id="60">
                <right>10</right>
                <top>80</top>
                <width>10</width>
                <bottom>32</bottom>
                <ondown>60</ondown>
                <onup>60</onup>
                <orientation>vertical</orientation>
            </control>
        </control>
    </controls>
</window>