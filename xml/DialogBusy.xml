<?xml version="1.0" encoding="UTF-8"?>
<window>
    <controls>
        <control type="group">
            <visible>!Window.IsVisible(volumebar) + !Window.IsVisible(extendedprogressdialog)</visible>
            <control type="image">
                <texture colordiffuse="a0303030">general/White.png</texture>
            </control>
            <control type="image">
                <top>45%</top>
                <left>45%</left>
                <bottom>45%</bottom>
                <right>45%</right>
