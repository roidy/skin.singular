                <aspectratio>keep</aspectratio>
                <animation effect="rotate" start="360" end="0" center="auto" time="3000" loop="true" condition="true">conditional</animation>
            </control>
            <control type="progress" id="10">
            </control>
        </control>
    </controls>
</window>